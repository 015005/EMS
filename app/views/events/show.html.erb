<p id="notice"><%= notice %></p>

<table class="show_events">
  <tr>
    <th>イベント名</th>
    <td colspan=3><%= @event.title %></td>
  </tr>
  <tr>
    <th>開催日程</th>
    <td colspan=3><%= @event.datetime1 %></td>
  </tr>
  <tr>
    <th>申込締切</th>
    <td colspan=3><%= @event.datatime2 %></td>
  </tr>
  <tr>
    <th>イベント内容</th>
    <td colspan=3><%= @event.free %></td>
  </tr>
  <tr>
    <th>公開URL</th>
    <td colspan=2>
      <textarea id="fe_text" name="" rows="1" cols="60"><%= request.url %></textarea>
    </td>
    <td>
      <button class='my_clip_button' data-clipboard-target='fe_text' data-clipboard-text='Default clipboard text from attribute' id='d_clip_button'>
      <b>コピーする</b>
      </button>
    </td>
  </tr>
  <tr>
    <td class="event_button"><%= button_to '参加申込', "/joins/new?event_id=#{@event.id}" %></td>
    <td class="event_button"><%= button_to '参加状況', "/joins?event_id=#{@event.id}" %></td>
    <td class="event_button"><%= button_to 'イベント編集', edit_event_path(@event) %></td>
    <td class="event_button"><%= button_to '戻る', events_path %></td>
  </tr>
</table>