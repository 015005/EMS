<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form">
    <table>
      <tr>
        <th colspan=4>イベント名</th>
      </tr>
      <tr>
        <td colspan=4><%= f.text_field :title %></td>
      </tr>
      <tr>
        <th colspan=4>開催日程</th>
      </tr>
      <tr>
        <td><%= f.number_field :year1 %>年</td>
        <td><%= f.number_field :month1 %>月</td>
        <td><%= f.number_field :day1 %>日</td>
        <td><%= f.text_field :hour1 %>：<%= f.text_field :minute1 %> ～</td>
      </tr>
      <tr>
        <th colspan=4>締切日時</th>
      </tr>
      <tr>
        <td><%= f.number_field :year2 %>年</td>
        <td><%= f.number_field :month2 %>月</td>
        <td><%= f.number_field :day2 %>日</td>
        <td><%= f.text_field :hour2 %>：<%= f.text_field :minute2 %> まで</td>
      </tr>
    </table>
  </div>
<br><br><br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
