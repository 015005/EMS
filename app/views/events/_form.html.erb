<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form">
    <table>
      <tr>
        <th colspan=4>イベント名</th>
      </tr>
      <tr>
        <td colspan=4><%= f.text_field :title %></td>
      </tr>
      <tr>
        <th colspan=4>開催日程</th>
      </tr>
      <tr>
        <td><%= f.date_field :datetime1 %> <%= f.time_field :datetime1 %></td>
      </tr>
      <tr>
        <th colspan=4>締切日時</th>
      </tr>
      <tr>
        <td><%= f.date_field :datatime2 %> <%= f.time_field :datatime2 %></td>
      </tr>
      <tr>
        <th colspan=4>詳細</th>
      </tr>
      <tr>
        <td colspan=4><%= f.text_area :free, :size => "100x20" %></td>
      </tr>
    </table>
  </div>
<br><br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
