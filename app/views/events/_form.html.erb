<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form">
    <table>
      <tr>
        <th colspan=3>イベント名</th>
      </tr>
      <tr>
        <td colspan=3><%= f.text_field :title %></td>
      </tr>
      <tr>
        <th colspan=3>開催日程</th>
      </tr>
      <tr>
        <td><%= f.datetime_select :datetime1, :lang => "Japanese" %></td>
      </tr>
      <tr>
        <th colspan=3>申込／取消 締切日時</th>
      </tr>
      <tr>
        <td><%= f.datetime_select :datatime2 %></td>
      </tr>
      <tr>
        <th colspan=3>詳細</th>
      </tr>
      <tr>
        <td colspan=3><%= f.text_area :free, :size => "80x20" %></td>
      </tr>
      <div class="actions">
      <tr>
        <td>
          <label><%= f.radio_button :scope, "0" %>全社向けイベント</label>
          <label><%= f.radio_button :scope, "1" %>関係者限定イベント</label>
        </td>
        <td class="reset"><%= reset_tag "リセット", type: "reset" %></td>
        <td class="create"><%= f.submit "イベント作成" %></td>
      </tr>
      </div>
    </table>
  </div>
<% end %>